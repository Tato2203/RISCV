#include<16F877a.h>
#use delay(clock=8M)
#fuses NOLVP,NOWDT,HS

#use standard_io(B)
#use standard_io(C)
#use standard_io(D)

#define trig pin_B0
#define echo pin_B1

#define b pin_B2
#define h pin_B3
#define c pin_B4
#define m pin_B5
#define g pin_B6

#define m1f pin_D2
#define m1b pin_D3
#define m2b pin_C4
#define m2f pin_C5

#define obj pin_D5


void go_forward(){
   output_high(m1f);
   output_high(m2f);
   output_low(m1b);
   output_low(m2b);
}

void stop(){
   output_low(m1f);
   output_low(m1b);
   output_low(m2f);
   output_low(m2b);

}

void go_backward(){
   output_high(m1b);
   output_high(m2b);
   output_low(m1f);
   output_low(m2f);

}

void turn(){
   output_high(m1f);
   output_high(m2f);
   output_low(m1b);
   output_low(m2b);
   delay_ms(2000);
}

void main(){
   while(true){
   go_forward();
   delay_ms(2000);
   stop();
   delay_ms(1000);
   go_backward();
   delay_ms(2000);
   stop();
   turn();
   stop();
   }
}
