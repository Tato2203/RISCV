#include<16F877a.h>
#use delay(clock=8M)
#fuses NOLVP,NOWDT,HS

#define trig pin_B0
#define echo pin_B1

#define b pin_B2
#define h pin_B3
#define c pin_B4
#define m pin_B5
#define g pin_B6

#define m1f pin_D0
#define m1b pin_D1
#define m2f pin_D3
#define m2b pin_D4


//#use standard_io(B)
float d,t;

void main(){
   setup_timer_1(T1_INTERNAL|T1_DIV_BY_1);
   while(true){
      output_high(trig);
      delay_us(10);
      output_low(trig);
      while(!input(echo))
      {}
      set_timer1(0);
      while(input(echo))
      {}
      t=get_timer1();
      d=(t/2)/(29.15);
      
   }
}
