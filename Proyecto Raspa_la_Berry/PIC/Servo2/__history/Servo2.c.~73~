#include <16f877a.h>
#use DELAY(CLOCK=8M)
#FUSES HS, NOWDT, NOLVP

int i;
void posicion(int grados){
;
   
   for(i=0;i<=50;i++){
      output_high(pin_b0);
      delay_us(((grados*2000)/180)+600);
      output_low(pin_b0);
      delay_us(2000);      
   }
}

void main(){
   while(true){
   
      posicion(90);
      posicion(180);
   
   }
}
